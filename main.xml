<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="textEnd"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textViewInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="textEnd"
                android:textSize="25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/two"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/three"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/add"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="25dp"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/five"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="5"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/six"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/sub1"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="25dp"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/div"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="25dp"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/allClear"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="25dp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="25dp"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>